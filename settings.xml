<!-- settings.xml -->
<settings>
    <servers>
        <server>
            <!-- Maven Central Deployment (SNAPSHOT) -->
            <id>sonatype-snapshots</id>
            <username>${env.SONATYPE_USERNAME}</username>
            <password>${env.SONATYPE_PASSWORD}</password>
        </server>
        <server>
            <!-- Maven Central Deployment (RELEASE)-->
            <id>sonatype-release-staging</id>
            <username>${env.SONATYPE_USERNAME}</username>
            <password>${env.SONATYPE_PASSWORD}</password>
        </server>
    </servers>
</settings>